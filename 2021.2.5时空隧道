            transform: rotate(30deg) translateY(calc(var(--i)*50px)) translateZ(calc(var(--i)*-14px));
            /* brightness是亮度 contrast是对比度 */
            filter: brightness(1) contrast(2);
            border-radius: 50px;
            position: absolute;
            border: 15px #fff solid;
            perspective: 100px;
            /* inset是将外边框转内边框 */
            box-shadow: 0 0 20px rgb(80,170,230),
            inset 0 0 20px rgb(80,170,230),
            0 0 80px #e0f,
            0 0 20px #e0f;
            opacity: calc(var(--x)*.05);
            animation: b 10s infinite ease-in-out;
        }
        /* 设置颜色的变换 */
        @keyframes a{
            0%,100%{
                filter: brightness(2) contrast(4);
            }
            50%{
                filter: brightness(1) contrast(2);
            }
        }
        /* 用透视的方法设置视觉冲击的效果 */
        @keyframes b{
            0%,100%{
                perspective: 40px;
            }
            50%{
                perspective: 45px;
            }
        }
    </style>
